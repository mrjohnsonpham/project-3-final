    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "mongoose": "^5.10.11",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "axios": "^0.21.0",
        "if-env": "^1.0.4"   
  }
}